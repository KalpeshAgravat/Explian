<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentsActivity">

    <Button
        android:id="@+id/buttonfrgment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Start Fragmrent One"/>

    <Button
        android:id="@+id/buttonfrgment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="108dp"
        android:text="Start Fragment Two"/>
    <RelativeLayout
        android:layout_margin="10dp"
        android:id="@+id/fr_1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/buttonfrgment2">

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fr_2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/fr_1"
        android:layout_margin="10dp">

    </RelativeLayout>

</RelativeLayout>